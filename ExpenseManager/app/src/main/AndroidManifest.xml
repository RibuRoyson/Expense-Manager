<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensemanager"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />


    <application
        android:name=".ExpenseManagerApplication"
        android:allowBackup="true"
        android:icon="@drawable/expense"
        android:logo="@drawable/expense"
        android:theme="@android:style/Theme.Black">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity
            android:name="com.example.expensemanager.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sandwitch"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensemanager.Activitymain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".ActivitySignup"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityLogin"/>
        </activity>
        <activity
            android:name="com.example.expensemanager.Viewdb"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensemanager.Showresult"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensemanager.Add"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensemanager.EditData"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensemanager.Bycat"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensemanager.Monthwise"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensemanager.Aboutus"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.expensemanager.Sampletotalmonth"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TotalGraph"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.expensemanager.GraphMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.expensemanager.Daywise"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name="com.example.expensemanager.CategoryTotal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ActivityLogin"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".CloudListView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".FaceBookLogin"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/a4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear12"
        android:orientation="horizontal"
        android:weightSum="1.0" >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:id="@+id/linearlayout1"
            android:weightSum="3.0" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:onClick="adddatas"
                >

                <ImageView
                    android:id="@+id/imageviewline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:onClick="days"
                    android:src="@drawable/linegraph"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageviewline"
                    android:layout_centerHorizontal="true"
                    android:text="Today"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:onClick="viewdatas">
                <ImageView
                    android:id="@+id/imageviewcat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:onClick="categories"
                    android:src="@drawable/categories"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageviewcat"
                    android:layout_centerHorizontal="true"
                    android:text="Category-wise"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/linearlayout2"
            android:orientation="vertical"
            android:weightSum="3.0" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:onClick="editdatas">
                <ImageView
                    android:id="@+id/imageviewmonths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="months"
                    android:layout_centerInParent="true"
                    android:src="@drawable/bargraph"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageviewmonths"
                    android:layout_centerHorizontal="true"
                    android:text="Month-wise"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:onClick="editdatas">
                <ImageView
                    android:id="@+id/imageviewtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="totalgraphs"
                    android:layout_centerInParent="true"
                    android:src="@drawable/linegraph"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageviewtotal"
                    android:layout_centerHorizontal="true"
                    android:text="Total"
                    android:onClick="total"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>





        </LinearLayout>
    </LinearLayout>





</RelativeLayout><!-- From: file:/home/imrokraft/AndroidStudioProjects/ExpenseManager/app/src/main/res/layout/graphmain.xml -->